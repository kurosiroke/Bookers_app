<h1>Books</h1>
<div class="book-wrap">
<% @books.each do |book| %>

  <div class="book-box">
   <div class="book-comment">
     <span class="book-body"><%= book.body %></span>
     <span class="book-title"><%= book.title %></span>
   </div>
  </div>


    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>

<% end %>

</div>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
     </tr>
     <tbody></tbody>
    </thead>
  </table>




<h2>New book</h2>
<%= form_with model: @list do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Boby</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>
<% end %>